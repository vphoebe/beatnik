{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "paths": {
      "@engine/*": ["./src/engine/*"],
      "@commands/*": ["./src/commands/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@generated/*": ["./prisma/generated/client/*"]
    }
  },
  "include": ["src/**/*"]
}
